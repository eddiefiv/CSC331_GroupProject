<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.* ?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="PokerController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #13e13">

    <top>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <Label text="Dealer / NPC" style="-fx-text-fill:white; -fx-font-size: 20px;"/>
            <HBox alignment="CENTER" spacing="10" padding="10">
                <ImageView fx:id="npcCard1" fitWidth="80" fitHeight="120"/>
                <ImageView fx:id="npcCard2" fitWidth="80" fitHeight="120"/>
            </HBox>
            <Label fx:id="npcChipLabel" text="NPC Chips: $1000" style="-fx-text-fill: yellow; -fx-font-size: 18px;"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="CommunityCards" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
            <HBox alignment="CENTER" spacing="15">
                <ImageView fx:id="comCard1" fitWidth="90" fitHeight="130"/>
                <ImageView fx:id="comCard2" fitWidth="90" fitHeight="130"/>
                <ImageView fx:id="comCard3" fitWidth="90" fitHeight="130"/>
                <ImageView fx:id="comCard4" fitWidth="90" fitHeight="130"/>
                <ImageView fx:id="comCard5" fitWidth="90" fitHeight="130"/>
            </HBox>
            <Label text="Pot" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
           <!--  <Label fx:id="potLabel" text="$0" style="-fx-text-fill: yellow; -fx-font-size: 26px;"/> -->
        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10" padding="20">
            <Label text="You" style="-fx-text-fill: white; -fx-font-size:20px;"/>
            <HBox alignment="CENTER" spacing="10">
                <ImageView fx:id="playerCard1" fitWidth="80" fitHeight="120"/>
                <ImageView fx:id="playerCard2" fitWidth="80" fitHeight="120"/>
            </HBox>
            <Label fx:id="playerChipLabel" text="Your Chips: $1000" style="-fx-text-fill: yellow; -fx-font-size: 18px;"/>
            <!-- <HBox alignment="CENTER" spacing="20" padding="20">
                <Button fx:id="dealButton" text="Deal" prefWidth="100" onAction="#onDeal"/>
                <Button fx:id="betButton" text="Bet" prefWidth="100" onAction="#onBet"/>
                <Button fx:id="raiseButton" text="Raise" prefWidth="100" onAction="#onRaise"/>
                <Button fx:id="foldButton" text="Fold" prefWidth="100" onAction="#onFold"/>
             </HBox> -->
        </VBox>
    </bottom>
</BorderPane>